<div class="post card">
    <div class="card-header">
        <label class="form-label" for="post-title">Title</label>
        <input type="text" name="post-title" value="{{post.title}}" class="form-input-2" />
        <h2>
            Edit Post
        </h2>
    </div>
    <div> 
        <img src="{{post.imageURL}}" id="post-image" class="post-image" >
    </div>

    <form id="edit-post-form" class="card-body">
        <input type="hidden" name="post-id" value="{{post.id}}" />


        <label class="form-label" for="post-body">Details</label>
        {{!-- <input type="text" name="post-body" value="{{post.text}}" class="form-input-2" /> --}}
         <textarea class="form-input-2 form-control-md" name="post-body" value="{{post.text}}"></textarea> 

        <button type="submit" class="btn">Update</button>

        <button type="button" id="delete-btn" class="btn">Delete</button>
    </form>
</div>
<script src="/javascript/edit.js"></script>