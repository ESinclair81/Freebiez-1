<div class="post card">
    <div class="card-header">
        <h2>New Post</h2>
    </div>
    <form id="new-post-form" class="card-body" enctype="multipart/form-data">
        <label class="form-label" for="post-title">Title</label>
        <input type="text" id="post-title" name="post-title" class="form-input" />

        <label class="form-label" for="post-image">Image</label>
        <input type="file" id="post-image-upload" name="post-image-upload" accept="image/*" class="form-input" />

        <label class="form-label" for="post-body">Details</label>
        <textarea name="post-text" id="post-text" class="form-input"></textarea>

        <button type="submit" class="btn">Post</button>
    </form>
</div>

<script src="/javascript/new.js"></script>