<div class="post card">
    <div class="card-header">
        <h2>New Post</h2>
    </div>
    <form id="new-post-form" class="card-body" enctype="multipart/form-data">
        <label class="form-label form-control-lg" for="post-title">Post Title</label>
        <input type="text" id="post-title" name="post-title" class="form-input" />

        <label class= "form-label form-control-lg" for="post-image">Post Image</label>
        <input type="file" id="post-image" name="post-image" accept="image/*" class="form-input form-control-lg" />

        <label class="form-label form-control-lg" for="post-body">Content</label>
        <textarea class="form-input form-control-lg" name="post-text" id="post-text"></textarea>

        <button type="submit" class="btn btn-lg btn-primary">Post</button>
    </form>
</div>

<script src="/javascript/new.js"></script>