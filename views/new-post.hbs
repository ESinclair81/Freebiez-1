<div class="post card">
    <div class="card-header">
        <h2>New Post</h2>
    </div>
    <form id="new-post-form" class="card-body" enctype="multipart/form-data">
        <label class="form-label form-control-md post-card-title" for="post-title">Title</label>
        <input type="text" id="post-title" name="post-title" class="form-input-2" />

        <label class= "form-label form-control-md post-card-title" for="post-image">Image</label>
        <input type="file" id="post-image-upload" name="post-image" accept="image/*" class="form-input-2 form-control-md" />

        <label class="form-label form-control-md post-card-title" for="post-body">Details</label>
        <textarea class="form-input form-control-md textarea-2" name="post-text" id="post-text"></textarea>
        <br>
        <button type="submit" class="btn btn-md">Post</button>
    </form>
</div>

<script src="/javascript/new.js"></script>